{
  "name": "dev-wiki-backend",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "NODE_ENV=development node dist/src/app.js",
    "build": "tsc -p .",
    "api-docs": "swagger-cli bundle ./src/infra/swagger/openapi.yaml --outfile build/swagger.yaml --type yaml",
    "prestart:dev": "npm run api-docs",
    "start:local": "nodemon",
    "start:dev": "NODE_ENV=development nodemon",
    "start:prod": "npm run build && NODE_ENV=production node dist/src/app.js",
    "typeorm": "NODE_ENV=development node -r tsconfig-paths/register -r ts-node/register ./node_modules/typeorm/cli.js --dataSource ./src/infra/mysql/dataSource.ts",
    "test": "mocha --require ts-node/register './src/**/*.*.spec.ts' './src/**/*.spec.ts'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "connect-redis": "^6.1.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^2.3.3",
    "redis": "^4.2.0",
    "swagger-cli": "^4.0.4",
    "typeorm": "^0.3.9",
    "uuid": "^8.3.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/assert": "^1.5.6",
    "@types/bcrypt": "^5.0.0",
    "@types/connect-redis": "^0.0.18",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/mocha": "^10.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.45",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@types/yamljs": "^0.2.31",
    "assert": "^2.0.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "swagger-ui-express": "^4.6.1",
    "ts-node": "^10.8.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.6.4"
  }
}
